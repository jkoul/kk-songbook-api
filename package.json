{
  "name": "kk-songbook-api",
  "description": "Apollo GraphQL API server for the Kostume Karaoke songbook project",
  "version": "0.0.0",
  "main": "src",
  "author": {
    "name": "Jeremy Koulish"
  },
  "bugs": {},
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "engines": {
    "node": "^10.13.0",
    "npm": "6.5.0"
  },
  "scripts": {
    "start": "node index",
    "dev": "nodemon index",
    "clean": "rimraf dist",
    "test": "jest --watch",
    "lint": "eslint src/. --config .eslintrc.json",
    "seedDb": "node scripts/seed"
  },
  "dependencies": {
    "apollo-server-express": "^2.4.8",
    "bull": "^3.8.1",
    "codeship-git-rev-sync": "0.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.4",
    "dataloader": "^1.4.0",
    "express": "^4.16.4",
    "graphql": "^14.2.1",
    "graphql-server-express": "^1.3.2",
    "graphql-tag": "^2.10.1",
    "graphql-tools": "^4.0.4",
    "helmet": "^3.16.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.5",
    "mongodb": "^3.2.3",
    "mongoimport": "^1.0.6",
    "mongojs": "^2.6.0",
    "mongoose": "^5.5.4",
    "passport-jwt": "^4.0.0",
    "passport-localapikey": "0.0.3",
    "serve-favicon": "^2.4.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.0.1",
    "casual": "^1.6.0",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.2",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "request": "^2.87.0",
    "request-promise": "^4.2.4",
    "supertest": "^4.0.2"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "scripts"
    ],
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/scripts/jestSetup.js",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.stories.js",
      "!src/components/themes/*.js",
      "!src/store/{configure,reducer,sagas}.js",
      "!<rootDir>/node_modules"
    ],
    "preset": "@shelf/jest-mongodb"
  }
}
